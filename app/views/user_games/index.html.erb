
<html>
<head>
  <style>
  .grid-container {
    display: grid;
    grid-row-gap: 20px;
    grid-template-columns: auto auto auto;
    background-color: #2196F3;
    padding: 10px;
  }
  .grid-item {
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 0, 0, 0.8);
    padding: 10px;
    font-size: 15px;
    text-align: center;
  }
  </style>

</head>
<body>

<h1>All Games Currently for Sale:</h1>

<div class="grid-container">
  <% @user_games.each do |g| %>

    <% if g.status == "For sale" %>
    <div class="grid-item">
      <li><%= link_to g.game.name, user_game_path(g.id) %></li>
      <ul>List Price: <%= number_to_currency(g.list_price) %>
        <br>Condition: <%= g.condition %>
        <br>For Sale By: <%= g.user.username %></ul>
    </div>
    <% end %>
  <% end %>
</div>

</body>
</html>
